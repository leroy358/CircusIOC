        <div id="menuTreeAreaInnerWrapper">
            <div class="treeWrapper">
                <a class="treePackItem">内容管理</a>
                <span class="treePack">
                    <a class="treeItem" link="/Admin/Picture/List">图片管理</a>
                </span>
                <a class="treePackItem">账户分配</a>
                <span class="treePack">
                    <a class="treeItem" link="/Admin/Users/List">账户管理</a>
                </span>
            </div>
        </div>
    </div>
</div>
<div id="openedMenuItemsArea">
    <div id="openedMenuItemsAreaInnerWrapper"></div>
</div>
<div id="contentArea">
    <div id="contentAreaInnerWrapper"></div>
</div>