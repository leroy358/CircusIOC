    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "管理系统";
}

@section Head{
    <link rel="stylesheet" type="text/css" href="~/BackSet/src/other/uiTree/uiTree.css">
